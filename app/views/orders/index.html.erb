<p id="notice"><%= notice %></p>

<p>
  <strong>Diner's Orders:</strong>
    <%= @group_member.diner_name %>

</p>


<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @orders.each do |order| %>
        <tr>
            <td><%= order.Restaurant %></td>
            <td><%= link_to 'Show Order', order %></td> 
            <!-- <td><%= link_to 'Edit', edit_order_path(order) %></td> -->
            <td><%= link_to 'Delete Order', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', "/group_members/" + @group_member.id.to_s + "/new_order" %> |
<%= link_to 'Back', '/groups/'+@orders.first.group_member.group.id.to_s %> |
