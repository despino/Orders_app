<p id="notice"><%= notice %></p>
<div class="gray_box">
  <div class="index_listing" >
    <h1>Listing Groups</h1>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Group name :</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  </div>

  <div>
      <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td class="col-sm-2"><%= group.group_name %></td>
          <td class="col-sm-1"><%= link_to 'Show Members', group %></td>
          <td class="col-sm-1 "><%= link_to 'Edit', edit_group_path(group) %></td>
          <td class="col-sm-1"><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>


<br>
<br>
<%= link_to 'New Group', new_group_path %>
</div>
