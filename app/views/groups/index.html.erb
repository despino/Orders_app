  <body id="listing_groups">
  <p id="notice"><%= notice %></p>

  <div class="gray_box">
    <div>
      <h1 class="index_listing">Listing Groups</h1>
    </div>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>

        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td class="col-sm-2"><%= link_to group.group_name, group %></td>
              <!-- <td class="col-sm-1"><%= link_to 'Show Members', group %></td> -->
              <td class="col-sm-1 "><%= link_to 'Edit', edit_group_path(group) %></td>
              <td class="col-sm-1"><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
          </tbody>
        </table>



      <br>
      <br>
      <%= link_to 'New Group', new_group_path %>
    </div>
  </div>
</body>
